<UserControl x:Class="Octarine_Core.Resource.UsersIntefeces.ChatUpBur"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Octarine_Core.Resource.UsersIntefeces"
             mc:Ignorable="d" Style="{x:Null}" Width="1500" Height="77" Foreground="{x:Null}"
             BorderBrush="Transparent" BorderThickness="0" Margin="0,25,0,0">
    <Grid>
        <Rectangle RadiusX="30" RadiusY="30" Fill="{DynamicResource MainGray}"/>
        <StackPanel x:Name="MainChatStack" Orientation="Horizontal">
            <Image Height="65" Width="65" 
            Source="/Resource/Icons/IconUser.png" Margin="35,0,0,0">
                <Image.Clip>
                    <EllipseGeometry Center="32.5,32.5" RadiusX="32.5" RadiusY="32.5"/>
                </Image.Clip>
            </Image>
            <TextBlock x:Name="FriendNameTextBox" TextWrapping="Wrap" Text="UserName" HorizontalAlignment="Left" VerticalAlignment="Center" TextAlignment="Center" Margin="35,0,0,0" FontSize="24"/>
            <Button VerticalAlignment="Center" Margin="935,0,0,0" Height="70" Width="80" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush ImageSource="/Resource/Icons/PhoneButtob.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>
            <Button BorderBrush="{x:Null}" Height="70" Width="80" Margin="25,0,0,0">
                <Button.Background>
                    <ImageBrush ImageSource="/Resource/Icons/PinBt.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>
            <Button BorderBrush="{x:Null}" Height="70" Width="80" Margin="25,0,0,0">
                <Button.Background>
                    <ImageBrush ImageSource="/Resource/Icons/MoreBt.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
