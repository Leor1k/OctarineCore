<UserControl x:Class="Octarine_Core.Resource.UsersIntefeces.ErorrShowing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Octarine_Core.Resource.UsersIntefeces"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="800">
    <Grid>
        <Rectangle Height="40" RadiusX="7" RadiusY="7" Stroke="{DynamicResource Lime}" Fill="{DynamicResource MainGray}" StrokeThickness="0.4"/>
        <TextBox x:Name="ErorrTB" TextWrapping="Wrap" Margin="5,0,5,0"/>

    </Grid>
</UserControl>
