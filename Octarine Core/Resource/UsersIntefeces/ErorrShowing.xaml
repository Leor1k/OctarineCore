<UserControl x:Class="Octarine_Core.Resource.UsersIntefeces.ErorrShowing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Octarine_Core.Resource.UsersIntefeces"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="800">
    <Grid>
        <Rectangle Height="40" RadiusX="7" RadiusY="7" Stroke="{DynamicResource Lime}" Fill="{DynamicResource MainGray}" StrokeThickness="0.4"/>
        <TextBox x:Name="ErorrTB" TextWrapping="Wrap" Margin="50,5,5,5" TextAlignment="Center" FontSize="14"/>
        <Viewbox x:Name="Err"
         UseLayoutRounding="True"
         SnapsToDevicePixels="True" HorizontalAlignment="Left" Margin="10,4,0,4">
            <Image Source="{StaticResource SeccsesMini}"
           Stretch="Uniform"
                RenderOptions.BitmapScalingMode="HighQuality" Height="55"/>
        </Viewbox>
        <Viewbox x:Name="Sec"
            UseLayoutRounding="True"
            SnapsToDevicePixels="True" HorizontalAlignment="Left" Margin="10,4,0,4">
            <Image Source="{StaticResource ErrorMini}"
                Stretch="Uniform"
                RenderOptions.BitmapScalingMode="HighQuality" Height="55"/>
        </Viewbox>

    </Grid>
</UserControl>
