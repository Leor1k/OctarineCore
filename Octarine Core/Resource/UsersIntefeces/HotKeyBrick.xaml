<UserControl x:Class="Octarine_Core.Resource.UsersIntefeces.HotKeyBrick"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Octarine_Core.Resource.UsersIntefeces"
             mc:Ignorable="d" d:DesignWidth="800" Height="70" Margin="5,15,5,0" PreviewKeyDown="UserControl_PreviewKeyDown">
    <DockPanel LastChildFill="False" Background="{DynamicResource MainGray}">
        <TextBlock x:Name="TextKey" TextWrapping="Wrap" Text="TextKey" TextAlignment="Center" VerticalAlignment="Center" FontSize="24" Margin="35,0,0,0"/>
        <Button x:Name="DefaltKey" Content="DefaltKey"  MinHeight="30" MinWidth="30" DockPanel.Dock="Right" Width="NaN" VerticalAlignment="Center" FontSize="24" Margin="0,0,35,0" Background="{DynamicResource SecondGreen}" Click="DefaltKey_Click"/>
        <TextBlock TextWrapping="Wrap"  FontStyle="Italic" Text="По умолчанию:" DockPanel.Dock="Right" TextAlignment="Center" Foreground="#FF757575" Width="92" Margin="0,0,5,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:Name="SetUpKey"  Content="SetupKey" MinHeight="30" MinWidth="30" DockPanel.Dock="Right" VerticalAlignment="Center" FontSize="24" Margin="0,0,25,0" Background="{DynamicResource SecondGreen}" Click="SetUpKey_Click"/>
        <TextBlock TextWrapping="Wrap"  FontStyle="Italic" Text="Установленно:" DockPanel.Dock="Right" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="#FF757575"/>
    </DockPanel>
</UserControl>
