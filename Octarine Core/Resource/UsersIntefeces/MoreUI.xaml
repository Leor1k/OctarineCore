<UserControl x:Class="Octarine_Core.Resource.UsersIntefeces.MoreUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Octarine_Core.Resource.UsersIntefeces"
             mc:Ignorable="d" 
             d:MaxHeight="250" d:MaxWidth="400">
    <Border Background="{DynamicResource MainGray}" MaxHeight="250" MaxWidth="400" CornerRadius="10" Padding="10" BorderBrush="Black" BorderThickness="1"
            Focusable="True" Height="109">
        <StackPanel>
            <TextBlock x:Name="Zagolovok" TextWrapping="Wrap" Text="Вы уверенны что хотите удалить этот чат?" Margin="0,0,0,15" TextAlignment="Center"/>
            <TextBlock x:Name="basikText" TextWrapping="Wrap" Text="Вместе с чатом будут безвозвратны удалены все cообщения в этом чате." TextAlignment="Center" FontSize="10"/>
            <Grid Height="46">
                <Button Margin="98,17,192,7" Content="Отмена" Background="{DynamicResource ErrorCollar}" Click="Button_Click_1" BorderBrush="{DynamicResource MainWhite}"/>
                <Button Margin="199,17,91,7" Content="Подтвердить" Background="{DynamicResource LightGreen}" Click="Button_Click" BorderBrush="{DynamicResource MainWhite}"/>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
