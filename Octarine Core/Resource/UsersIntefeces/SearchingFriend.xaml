<UserControl x:Class="Octarine_Core.Resource.UsersIntefeces.SearchingFriend"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Octarine_Core.Resource.UsersIntefeces"
             mc:Ignorable="d"  Width="1500" Height="77" Foreground="{x:Null}" Margin="0,0,0,15">
    <Grid>
        <Rectangle Stroke="{DynamicResource Lime}" Fill="{DynamicResource MainGray}" RadiusX="15" RadiusY="15"/>
        <StackPanel Orientation="Horizontal">
            <Image Height="65" Width="65" 
                Source="/Resource/Icons/IconUser.png" Margin="25,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Image.Clip>
                    <EllipseGeometry Center="32.5,32.5" RadiusX="32.5" RadiusY="32.5"/>
                </Image.Clip>
            </Image>
            <TextBlock x:Name="NameSrachingUser" Text="NameHere" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25,0,0,0" FontSize="24" TextAlignment="Center"/>
            <TextBlock x:Name="StatusSearchingUser" Text="StatusHere" FontSize="20" Margin="25,0,0,0" FontFamily="Montserrat Light" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <TextBlock x:Name="StatysRequestTb" Text="StatusRequestHere" FontSize="20" FontFamily="Montserrat Light" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="500,0,0,0"/>
        </StackPanel>
        <Button x:Name="AddFriendBtn" Content="+" HorizontalAlignment="Right" FontSize="72" Background="{x:Null}" BorderBrush="{x:Null}" Margin="0,0,15,0" Click="AddFriendBtn_Click"/>
    </Grid>
</UserControl>
