<UserControl x:Class="Octarine_Core.Resource.UsersIntefeces.UserCalItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Octarine_Core.Resource.UsersIntefeces"
             mc:Ignorable="d" 
             d:DesignHeight="80" Width="91">
    <Grid>
        <Rectangle Stroke="{DynamicResource MainWhite}" StrokeThickness="0.2" RadiusX="4" RadiusY="5" Margin="5,5,5,5" Fill="{DynamicResource SecondGreen}"/>
        <Ellipse HorizontalAlignment="Center" Height="42" Margin="0,10,0,0" VerticalAlignment="Top" Width="42">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#FF2C2C2C" Offset="0.725"/>
                    <GradientStop Color="#FF3C3C3C" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Image x:Name="UsersImage" HorizontalAlignment="Center" 
            Source="/Resource/Icons/IconUser.png" VerticalAlignment="Top" Margin="0,11,0,0" Width="41" Height="40">
            <Image.Clip>
                <EllipseGeometry Center="32.5,32.5" RadiusX="40" RadiusY="40"/>
            </Image.Clip>
        </Image>
        <TextBlock x:Name="UserNameTb" HorizontalAlignment="Center" Margin="0,59,0,0" TextWrapping="WrapWithOverflow" VerticalAlignment="Top" TextAlignment="Center" Foreground="{DynamicResource MainWhite}" Text="Nik"/>
    </Grid>
</UserControl>
